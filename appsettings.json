{
  "ConnectionStrings": {
    "Database": "data source=.\\SQLEXPRESS;initial catalog=LogDb;user id=sa;password=123456;App=EntityFramework;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Expressions",
      "Serilog.Sinks.MSSqlServer",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    },
    "Enrich": [ "WithMachineName", "FromLogContext", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/ApiLog-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:dd-MM-yyyy HH:mm:ss.fff} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "data source=.\\SQLEXPRESS;initial catalog=LogDb;App=EntityFramework;TrustServerCertificate=True",
          "sinkOptionsSection": {
            "tableName": "logevents",
            "schemaName": "dbo",
            "autoCreateSqlTable": true
          }
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341/"
        }
      }
    ]
  } 
}
